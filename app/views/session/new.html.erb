<%= form_tag '/login' do %>
                       <div class="field_login">
                               <p>Name:</p>
                               <%= text_field_tag "name" %>
                       </div>
                       <div class="field_login">
                               <p>Password: </p>
                               <%= password_field_tag 'password' %>
                       </div>
                       <div class="actions">
                       <%= submit_tag "Login!", class: "btn" %>
                   </div>
               <% end %>