$('#deal').hide();

$('#balance').empty();
$('#balance').append(<%= @bal %>);

$('#p_hand').empty();
<% @p_hand.each do |x| %>
  $('#p_hand').append('<%= x.face %>');
  $('#p_hand').append('<%= x.suit %>');
<% end %>

$('#p_value').empty();
$('#p_value').append('<%= @p_value %>');

$('#d_hand').empty();
<% @d_hand.each do |x| %>
  $('#d_hand').append('<%= x.face %>');
  $('#d_hand').append('<%= x.suit %>');
<% end %>

$('#d_value').empty();
$('#d_value').append('<%= @d_value %>');

